<%- include("partials/header") -%>
    <div class="card shadow border edit-section">
        <h1>Edit Your Project</h1>
        <p><%= project_number %></p>
        <form action="/update" method="post">
            <div class="form-group">
            <label>Project Title</label>
            <input class="form-control" value="<%= project_title %>" name="project_title" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Project Description</label>
                <textarea class="form-control" rows="8" value="<%= project_content %>" name="project_content" autocomplete="off"><%= project_content %></textarea>
            </div>
            <div class="form-group">
                <label>Tags</label>
                <input class="form-control" name="post_tags" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-primary mt-2">Edit The Project</button>
        </form>
    </div>
<%- include("partials/footer"); -%>