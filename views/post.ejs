<%- include("partials/header"); -%>
    <div class="card shadow border post-form">
        <h1>Post Your Project</h1>
        <form action="/post" method="post">
            <div class="form-group">
                <label>Project Domain</label>
                <input class="form-control" name="post_domain" autocomplete="off">
            </div>
            <div class="form-group">
            <label>Project Title</label>
            <input class="form-control" name="post_title" autocomplete="off">
            </div>
            <div class="form-group">
                <label>Project Description</label>
                <textarea class="form-control" rows="8" name="post_content" autocomplete="off"></textarea>
            </div>
            <div class="form-group">
                <label>Tags</label>
                <input class="form-control" name="post_tags" autocomplete="off">
            </div>
            <label>Select Visibility</label>
            <select name="visibility" id="visibility">
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="institute">Within Institute</option>
            </select>
            <br>
            <button type="submit" class="btn btn-primary">Post The Project</button>
        </form>
    </div>  
<%- include("partials/footer"); -%>